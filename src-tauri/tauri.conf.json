{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:3001",
        "distDir": "../dist"
    },
    "package": {
        "productName": "moon-quote",
        "version": "0.2.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "fs": {
                "scope": [
                    "*"
                ]
            },
            "protocol": {
                "asset": true,
                "assetScope": [
                    "$DATA/**"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": [],
                "desktopTemplate": "./templates/main.desktop"
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.snorkysnark.moon-quote",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "template": "./templates/main.wxs"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 800,
                "resizable": true,
                "title": "Moon Quote",
                "width": 1300
            }
        ],
        "systemTray": {
            "iconPath": "icons/StoreLogo.png"
        }
    }
}
